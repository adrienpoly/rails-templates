<%= link_to root_path do %>
  <%= image_tag "logo.png", class: "authentication-brand-logo-img" %>
<% end %>

<div class="social-media-authentication">
  <p>Log in with...</p>
  <%= link_to "#", class: "btn btn-loboz-signup google-red btn-full-w" do %>
      <i class="fa fa-google-plus"></i>
      Log in with Google
  <% end %>

  <%= link_to "#", class:"btn btn-loboz-signup facebook-blue btn-full-w" do %>
      <i class="fa fa-facebook"></i>
      Login with Facebook
  <% end %>

  <p>or use your email:</p>
</div>


<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, placeholder: "E-mail", label: false %>
    <%= f.input :password, required: false, placeholder: "Password", label: false %>
    <div id="forgot-password">
      <%= link_to "I forgot my password", new_password_path(resource_name) %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-loboz btn-signup-submit btn-full-w" %>
  </div>
<% end %>
<hr>
<div class="signup-login-switch">
  <p>Don't have an account?</p>
  <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-loboz btn-brand-inverse" %>
</div>
